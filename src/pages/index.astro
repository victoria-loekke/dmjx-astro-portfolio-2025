---
import Layout from "../layouts/Layout.astro";
import Case from "../components/Case.astro";
import IndexNav from "../components/IndexNav.astro";
---

<script>
  import { gsap } from "gsap";

  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.from(".box", {
    y: 400,
    opacity: 0,
    duration: 1,
    stagger: 0.3,
  });

  gsap.to(".pic", {
    scrollTrigger: ".pic",
    x: 500,
  });
</script>

<Layout>
  <div
    class="overflow-x-hidden w-full h-screen bg-[url(/images/art.JPG)] p-8 md:p-12 xl:p-18 2xl:p-25">
    <div class="overflow-x-hidden h-full flex justify-center items-center">
      <div
        class="no-scrollbar bg-offwhite w-full h-full overflow-y-auto overflow-x-hidden shadow-lg
        xl:p-4">
        <div
          class="blur-animation-index font-heading text-center font-extrabold text-[6.5rem] pt-4
          md:text-[20rem] md:pt-0
          xl:text-[25rem] xl:-mt-20
          2xl:text-[31rem] 2xl:-mt-25">
          Victoria
        </div>

        <div
          class="xl:relative xl:-mt-90 xl:grid xl:grid-cols-3
        2xl:-mt-85">
          <div class="xl:col-start-2">
            <img
              src="/images/art.JPG"
              class="w-full  object-cover object-center
              p-5 -mt-8
        md:pl-40 md:pr-40 md:-mt-30
        xl:p-15 xl:mt-10
         2xl:p-0 2xl:h-110"
            />
          </div>

          <div
            class="z-100 fixed left-1/2 transform -translate-x-1/2 bg-[url(/images/star2.png)]
              bg-cover bg-center bg-no-repeat flex items-center justify-center
              h-17 w-17 bottom-5
              xl:bottom-20
              2xl:h-20 2xl:w-20 2xl:bottom-25">
            <a href="/contact">
              <p class="font-extrabold font-neue text-center whitespace-nowrap hover:scale-200 transition-all duration-500">
                contact me
              </p></a
            >
          </div>

          <div
            class="xl:sticky xl:-top-70 xl:z-10 xl:col-start-1 xl:row-start-1
            2xl:-top-85">
            <IndexNav text="cases" link="/cases" />
          </div>

          <div
            class="xl:sticky xl:-top-70 xl:z-10 xl:col-start-3
          2xl:-top-85">
            <IndexNav text="about" link="/about" />
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
