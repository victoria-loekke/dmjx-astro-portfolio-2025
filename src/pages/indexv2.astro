---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="overflow-x-hidden p-25 w-full h-screen bg-[url(/images/art.JPG)]">
    <div class="h-full flex justify-center items-center">
      <div class="bg-offwhite p-4 w-full h-full overflow-y-auto">
        <div
          class="-mt-25 blur-animation font-heading text-center text-[31rem] font-extrabold uppercase blur-md">
          Victoria
        </div>
        <div class="relative -mt-90 grid grid-cols-3">
          <a href="/casesv2">
            <h1 class="text-center text-6xl pt-100 uppercase font-extrabold">
              Cases
            </h1></a
          >
          <img src="/images/art.JPG" class="w-full h-full col-start-2" /><a
            href="/about">
            <h1 class="text-center text-6xl pt-100 uppercase font-extrabold">
              About
            </h1></a
          >
        </div>
      </div>
    </div>
  </div>
</Layout>
