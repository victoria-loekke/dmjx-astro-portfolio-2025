---
import Layout from "../layouts/Layout.astro";
import Single from "../components/Single.astro";
import BackgroundPic from "../components/BackgroundPic.astro";
import WhiteBox from "../components/WhiteBox.astro";
---

<script>
  import { gsap } from "gsap";

  gsap.from(".box", {
    y: 400,
    opacity: 0,
    duration: 1,
    stagger: 0.1,
  });
</script>

<Layout>
  <BackgroundPic img="/images/blender.png">
    <WhiteBox>
      <Single
        title="Tommelises island"
        dato="November 2024"
        info="Made in blender"
        text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        img="/images/blender/blender4.png"
        img2="/images/blender/blender3.png"
        img3="/images/blender/blender2.png"
        img4="/images/blender/blender5.png"
        img5="/images/blender/blender6.png"
        img6="/images/blender/blender7.png"
        img7="/images/blender/blender8.png"
      />
    </WhiteBox>
  </BackgroundPic>
</Layout>

--- import Layout from "../layouts/Layout.astro"; import Case from
"../components/Case.astro"; import IndexNav from "../components/IndexNav.astro";
---

<script>
  import { gsap } from "gsap";

  gsap.from(".box", {
    y: 400,
    opacity: 0,
    duration: 1,
    stagger: 0.3,
  });
</script>

<Layout>
  <div class="overflow-x-hidden p-25 w-full h-screen bg-[url(/images/art.JPG)]">
    <div class="h-full flex justify-center items-center">
      <div
        class="no-scrollbar bg-offwhite p-4 w-full h-full overflow-y-auto shadow-lg">
        <div
          class="-mt-25 blur-animation-index font-heading text-center text-[31rem] font-extrabold uppercase blur-md">
          Victoria
        </div>

        <div class="relative -mt-90 grid grid-cols-3">
          <IndexNav text="Cases" link="/cases" />

          <img
            src="/images/art.JPG"
            class="w-full h-full col-start-2 object-cover"
          />

          <IndexNav text="About" link="/about" />

          <Case
            img="https://media.giphy.com/media/11xBk5MoWjrYoE/giphy.gif?cid=ecf05e47ri7x46ts1f5ao99oaq72dkeo18weut8uw5neb0vi&ep=v1_gifs_search&rid=giphy.gif&ct=g"
            title="SCHOOL"
          />

          <div class="col-start-3">
            <Case
              img="https://media.giphy.com/media/11xBk5MoWjrYoE/giphy.gif?cid=ecf05e47ri7x46ts1f5ao99oaq72dkeo18weut8uw5neb0vi&ep=v1_gifs_search&rid=giphy.gif&ct=g"
              title="ABOUT"
            />
          </div>

          <img src="images/dogcrab.png" class="" />

          <img src="images/dogcrab.png" alt="" />

          <img src="images/dogcrab.png" alt="" />

          <img src="images/dogcrab.png" alt="" />

          <img src="images/dogcrab.png" alt="" />

          <img src="images/dogcrab.png" alt="" />
        </div>
      </div>
    </div>
  </div>
</Layout>
