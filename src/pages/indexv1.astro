---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Case from "../components/Case.astro";
import { getCollection } from "astro:content";
const blogPosts = await getCollection("blog");
---

<Header />
<Layout>
  <div class="grid grid-cols-3 pt-32">
    <img src="/images/art.JPG" class="w-full h-full col-start-2" />
  </div>

  <div class="relative w-full h-screen overflow-hidden">
    <div
      class="blur-animation absolute top-50 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-[19rem] font-extrabold uppercase blur-md">
      Portfolio
    </div>

    <div class="relative z-10 mt-50">
      <h1 class="text-4xl font-bold text-white text-center uppercase">
        Victoria Løkke
      </h1>
      <p class="text-center text-white">Coded design studerende på DMJX</p>
      <div class="grid grid-cols-3 pt-32">
        <img
          src="/images/art.JPG"
          class="w-full h-full col-start-2"
        />
      </div>
    </div>
  </div>
</Layout>
