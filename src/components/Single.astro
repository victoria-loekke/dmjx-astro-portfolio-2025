---
const {
  title,
  dato,
  info,
  text,
  img,
  film,
  img2,
  img3,
  img4,
  img5,
  img6,
  img7,
  tilbage,
  frem,
} = Astro.props;
---

<div class="md:pl-20 md:pr-20 md:pt-10
xl:grid xl:grid-cols-2 xl:p-10 xl:gap-6">
  <div
    class="p-2
  xl:sticky xl:top-10 xl:w-full xl:p-6 xl:h-100
  2xl:grid 2xl:grid-cols-1 2xl:grod-rows-2
  2xl:h-200">
    <a href="/cases"
      ><p
        class="text-lg uppercase font-extrabold hover:text-onHover
      2xl:text-2xl">
        Back
      </p></a
    >

    <div
      class="blur-animation font-heading pt-5 leading-17 text-[4rem] font-extrabold
      md:text-[5rem]
      xl:text-[7rem] xl:leading-24 xl:pt-5
      2xl:pt-10 2xl:leading-35 2xl:text-[9rem]">
      {title}
    </div>

    <p
      class="box uppercase font-extrabold text-xl
    xl:text-3xl xl:mt-2
    2xl:text-4xl">
      {info}
    </p>

    <p class="box font-text text-xl font-light
    xl:text-xl
    2xl:text-2xl">
      {dato}
    </p>

    <p class="box mt-5 text-sm
    xl:text-md
    2xl:text-lg">{text}</p>
    <div class="grid grid-cols-2 mt-5
    md:mt-20
    xl:mt-10 xl:self-end
    2xl:mt-20">
      <a
        href={tilbage}
        class="text-3xl uppercase font-extrabold hover:text-onHover">←</a
      >

      <a
        href={frem}
        class="text-right text-3xl uppercase font-extrabold hover:text-onHover"
        >→</a
      >
    </div>
  </div>


  <div class="grid gap-4
  xl:row-span-2">
    {film ? <video src={film} autoplay muted loop /> : null}
    <img src={img} />
    <img src={img2} />
    <img src={img3} />
    <img src={img4} />
    <img src={img5} />
    <img src={img6} />
    <img src={img7} />
  </div>
</div>
