---
const { title, dato, info, text, img, img2, img3, img4, img5, img6, img7 } =
  Astro.props;
---

<div class="grid grid-cols-2 p-10 gap-6">
  <div class="sticky top-10 p-6 h-150 w-full max-w-full">
    <a href="/cases"><p class="text-xl uppercase font-extrabold">Back</p></a>
    <div class="font-heading text-[14rem] font-extrabold uppercase blur-xs">
      {title}
    </div>

    <p class="text-center font-script font-semibold -mt-20 text-7xl">{dato}</p>
    <p class="text-center mt-10 font-text text-2xl font-light">{info}</p>
    <p class="text-center mt-5">{text}</p>
    <div class="grid grid-cols-2 mt-20">
      <p class="text-xl uppercase font-extrabold">Previous</p>
      <p class="text-right text-xl uppercase font-extrabold">Next</p>
    </div>
  </div>

  <div class="grid gap-4">
    <img src={img} />
    <img src={img2} />
    <img src={img3} />
    <img src={img4} />
    <img src={img5} />
    <img src={img6} />
    <img src={img7} />
  </div>
</div>
